<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tianbeijin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
            <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/tuanzi4" />    

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="请选择你感兴趣的社团种类"
            android:background="@drawable/biankuang2"
            android:textSize="20dp"
            android:textColor="#000" />

    
    </LinearLayout>
    
     <Button
             android:onClick="hobby"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="100sp"
              android:background="@drawable/biankuang"
            android:drawableRight="@drawable/maike"
            android:text="兴趣类，兴趣是你我的初衷"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000"
            android:textSize="20sp" />
       <Button
                  android:onClick="xueshu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="30sp"
              android:background="@drawable/biankuang"
            android:drawableRight="@drawable/shu"
            android:text="学术类，学术让社团更精"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000"
            android:textSize="20sp" />

         <Button
               android:onClick="lilun"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginLeft="5sp"
             android:layout_marginTop="30sp"
              android:background="@drawable/biankuang"
             android:drawableRight="@drawable/lilun"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:paddingTop="5dp"
             android:text="理论类，理论让人读懂人生"
             android:textColor="#000"
             android:textSize="20sp" />
     
</LinearLayout>
